@using FreeFoodNearMe.Models
@model IEnumerable<FreeFoodNearMe.Models.Service>

@{
    ViewBag.Title = "Pending Services";
}
<link rel="stylesheet" type="text/css" href="~/Content/dataTables.bootstrap4.min.css" />

<div class="body-content">
    <div class="PendingServiceMainBanner">
        <div class="MainBannerMessageArea">
            Pending services waiting for review
        </div>
    </div>

    <div class="PendingServiceBottomContent">
        <hr />
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Service Name</th>
                    <th>Service Type</th>
                    <th>Address</th>
                    <th>View More</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Service in Model)
                {
                    <tr>
                        <td>@Service.ServiceName</td>
                        <td>@Service.ServiceType</td>
                        <td>@Service.Address</td>
                        <td>@Html.ActionLink("More Details","PendingServiceDetail", new { id = Service.Id})</td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
    </div>
</div>

<!---------------------------------------------------- Scripts -------------------------------------------------------->

<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js" type="text/javascript"></script>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
